{
  "name": "@xcritical/front-kit",
  "version": "1.0.0",
  "description": "Front Kit for XCritical projects",
  "workspaces": [
    "packages/*"
  ],
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "jest --config=jest.config.js",
    "lint": "eslint packages/**/{src,stories,test}/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "compile": "yarn boltify run build",
    "build": "yarn clean && yarn compile",
    "build:storybook": "build-storybook -c .storybook -o .storybook-static --quiet",
    "deploy": "bash ./copy-to-publish.sh && bash ./publish.sh",
    "check": "npm run lint && npm run test",
    "clean": "rimraf dist lib .publish",
    "storybook": "start-storybook -p 9009 -s public",
    "build:lastcommit": "yarn clean && yarn compile --since HEAD~1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": "https://github.com:xcritical-software/xc-front-kit.git",
  "author": "Xcritical Software",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@storybook/addon-a11y": "^5.2.4",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-backgrounds": "^5.2.4",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-cssresources": "^5.2.4",
    "@storybook/addon-info": "^5.2.4",
    "@storybook/addon-storysource": "^5.2.4",
    "@storybook/addon-viewport": "^5.2.4",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@storybook/theming": "^5.2.4",
    "@types/history": "^4.7.3",
    "@types/jest": "^24.0.19",
    "@types/kind-of": "^6.0.0",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/memoizee": "^0.4.2",
    "@types/react-custom-scrollbars": "^4.0.6",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^4.1.19",
    "@xcritical/eslint-plugin-xcritical": "^2.0.2",
    "@xcritical/gulpify": "^2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "boltify": "1.1.4",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-docgen-typescript-loader": "^3.2.0",
    "rimraf": "^3.0.0",
    "storybook": "^5.1.11",
    "styled-components": "^4.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@types/react-redux": "^7.1.5",
    "styled-css-grid": "^1.2.1"
  }
}
